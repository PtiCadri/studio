FROM golang:1.25-alpine

WORKDIR /app

RUN apk add --no-cache git curl

# Install air for hot reload
RUN curl -sSfL https://raw.githubusercontent.com/cosmtrek/air/master/install.sh \
    | sh -s -- -b /usr/local/bin

COPY go.mod ./
RUN go mod download || true

COPY . .

EXPOSE 8080
CMD ["air", "-c", ".air.toml"]
